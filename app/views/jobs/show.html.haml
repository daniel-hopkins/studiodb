%p#notice= notice
%h4 New Shot
=link_to 'new shot', new_shot_path(:job_id=> @job.id)
%p
  %b Client
  = @job.client.name
%p
  %b Name:
  = @job.name
%p
  =image_tag @job.thumbnail.url
%p
  %b Date:
  = @job.date
%p
  %b Notes:
  = @job.notes
%p
  %b Invoiced:
  = @job.invoiced
%p
  %b Invoicenumber:
  = @job.invoicenumber
%p
  %b Tifhd:
  = @job.tifhd
%p
  %b Rawhd:
  = @job.rawhd
%p
  %b Public:
  = @job.public

%p
  %h3 shots in this job
  %ul
    - @job.shots.each do |shot|
      %li=link_to shot.description, shot

= link_to 'Edit', edit_job_path(@job)
\|
= link_to 'Back', jobs_path
